{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "typeRoots": [
      "types"
    ],
  },
  "include": [
    "src/index.ts",
    "src/tools.ts",
    "src/client/*/index.ts",
    "src/server/index.ts",
    "src/server/firebase-aware.ts",
    "src/frameworks/*/server.ts",
    "types/*.d.ts", "src/client/auth/index.js",
  ]
}
