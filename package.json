{
  "name": "firebase-frameworks",
  "version": "0.3.0",
  "description": "An experimental framework-aware Firebase CLI",
  "main": "dist/index.js",
  "repository": "github:FirebaseExtended/firebase-framework-tools",
  "author": {
    "name": "Firebase",
    "url": "https://firebase.google.com/"
  },
  "bugs": {
    "url": "https://github.com/FirebaseExtended/firebase-framework-tools/issues"
  },
  "keywords": [
  "firebase",
    "firebase-tools",
    "next.js"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && ts-node ./build.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:next": "rm -rf e2e && npx create-next-app e2e --use-npm --ts && npm run e2e:config && cd e2e && firebase emulators:exec --only hosting \"exit 0\"",
    "test:nuxt": "rm -rf e2e && npx create-nuxt-app e2e --answers '$(cat create-nuxt-answers.json)' && npm run e2e:config && cd e2e && firebase emulators:exec --only hosting \"exit 0\"",
    "e2e:config": "cd e2e && echo '{\"projects\": {\"default\": \"nextjs-demo-73e34\"}}' > .firebaserc && echo '{\"hosting\": {\"source\": \".\",\"site\":\"nextjs-demo-73e34\"}, \"emulators\": {\"hosting\": {\"port\": 8080}}}' > firebase.json"
  },
  "exports": {
    ".": {
      "node": "./dist/index.js",
      "default": null
    }
  },
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "inquirer": "^8.2.0",
    "firebase-tools": "^10.5.0",
    "@nuxt/types": "^2.15.8",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^16.11.12",
    "firebase": "^9.6.8",
    "next": "^12.0.7",
    "nuxt": "^2.15.8",
    "nuxt3": "^3.0.0-27474800.8dd77d7",
    "replace-in-file": "^6.3.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.3"
  }
}
