{
  "name": "firebase-frameworks",
  "version": "0.4.0",
  "description": "Experimental addon to the Firebase CLI to add web framework support",
  "main": "dist/index.js",
  "repository": "FirebaseExtended/firebase-framework-tools",
  "author": {
    "name": "Firebase",
    "url": "https://firebase.google.com/"
  },
  "bugs": {
    "url": "https://github.com/FirebaseExtended/firebase-framework-tools/issues"
  },
  "keywords": [
    "firebase",
    "firebase-tools",
    "next.js",
    "angular",
    "nuxt",
    "nuxt3",
    "ssr"
  ],
  "scripts": {
    "build": "rm -rf dist && tsc && ts-node ./tools/build.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "e2e:build-next": "rm -rf e2e && npx create-next-app e2e --use-npm --ts",
    "e2e:build-nuxt": "rm -rf e2e && npx create-nuxt-app e2e --answers '$(cat ./tools/create-nuxt-answers.json)'",
    "e2e:build-angular": "rm -rf e2e && npx @angular/cli new e2e --defaults --skip-git",
    "e2e:config": "cp ./tools/firebase.json ./e2e && cp ./tools/.firebaserc ./e2e",
    "test:e2e": "npm run e2e:config && cd e2e && firebase emulators:exec \"exit 0\"",
    "clean:build": "rm -rf dist",
    "clean:e2e": "rm -rf e2e",
    "clean:dev": "npm uninstall -g firebase-tools && rm -rf firebase-tools",
    "test:angular": ". ./tools/dev-tools.sh && npm run e2e:build-angular && npm run test:e2e",
    "test:next": ". ./tools/dev-tools.sh && npm run e2e:build-next && npm run test:e2e",
    "test:nuxt": ". ./tools/dev-tools.sh && npm run e2e:build-next && npm run test:e2e"
  },
  "exports": {
    ".": {
      "node": "./dist/index.js",
      "default": null
    },
    "./server": {
      "node": "./dist/server/index.js",
      "default": null
    }
  },
  "files": [
    "dist"
  ],
  "license": "Apache-2.0",
  "dependencies": {
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1303.3",
    "@angular-devkit/core": "^13.3.3",
    "@nuxt/types": "^2.15.8",
    "@types/cookie": "^0.5.1",
    "@types/inquirer": "^8.1.3",
    "@types/lru-cache": "^7.6.1",
    "@types/node": "^16.11.12",
    "cookie": "^0.5.0",
    "firebase": "^9.6.8",
    "firebase-admin": "^10.1.0",
    "firebase-functions": "^3.20.1",
    "firebase-tools": "^10.5.0",
    "inquirer": "^8.2.0",
    "lru-cache": "^7.8.1",
    "next": "^12.0.7",
    "nuxt": "^2.15.8",
    "nuxt3": "^3.0.0-27474800.8dd77d7",
    "replace-in-file": "^6.3.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.5.3"
  }
}
